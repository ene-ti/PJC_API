//               UploadObject(Bucket,            fileName,  bytes,  TRUE, nil, nil, amzbaPrivate, info);
 // if ACapa.cp_url.Trim.IsEmpty then
 //   raise EDatabaseError.Create('Nome da Capa é obrigatório');
  if cid_album = 0 then
